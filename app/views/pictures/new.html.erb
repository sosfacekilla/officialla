 <body>
<fieldset>
<div class="picture">Add a picture</div>
<%= form_for @picture, :html => { :multipart => true } do |f| %>

<div class="field">  
  <%= f.label :avatar, "Upload photo" %>
  <br />
  <%= f.file_field :avatar %>
</div>

<div class="actions">
    <%= f.submit "Upload" %>
</div>
<% end %>

</fieldset>
</body>